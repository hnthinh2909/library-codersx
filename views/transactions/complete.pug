extends ../layouts/common.pug

block header
	div(cclass="ollapse navbar-collapse d-flex")
		ul(class="navbar-nav d-flex flex-row bd-highlight mb-3")
			li(class="nav-item active")
				a(href="/" class="nav-link mr-4 ml-4") Home
			li(class="nav-item")
				a(href="/library/" class="nav-link mr-4") Library
			li(class="nav-item")
				a(href="/users/" class="nav-link mr-4") Users
			li(class="nav-item")
				a(href="/transactions/" class="nav-link mr-4") Transaction	
				
block content
	h1 Complete

	form(action="/transactions/complete", method="POST" class="form-group")
		input(type="hidden", name="id", value=id)
		select(name="complete")
			option= "YES"
			option= "NOT YET"
		button Confirm

	each dtb in data
		p= "This user is return the book ? - " + dtb.isComplete