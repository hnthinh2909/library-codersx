extends ../layouts/common

block content
    h1.ml-5 Cart
    
    each product in products
        ul.list-unstyled.ml-5.mr-5
            li.media
                img.mr-3(src=product.image, style="width: 150px")
                .media-body
                    h5.mt-0.mb-1= product.title
                    p= product.description
     
