extends ../layouts/common

block content
    h1.ml-5 Cart
    
    form(action="/cart/" method="POST" enctype="multipart/form-data")
        //- input(type='hidden', name='_csrf', value="{{csrfToken}}")
        .form-group           
            each product in products
                ul.list-unstyled.ml-5.mr-5
                    li.media
                        img.mr-3(src=product.image, style="width: 150px")
                        .media-body
                            h5.mt-0.mb-1= product.title
                            p= product.description

            button.btn.btn-primary.btn-lg.btn-block.ml-5.mb-5(style="width:300px" type='submit') Continue to checkout