        title Library
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand.ml-4(href='#') Library
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNavAltMarkup.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-icon
                        a.nav-item.nav-link.active(href='/') Home                   
                    li.nav-icon
                        a.nav-item.nav-link(href='/library/') Library
                    li.nav-icon          
                        a.nav-item.nav-link(href='/transactions/') Transactions
                    li.nav-icon
                        a.nav-item.nav-link(href='/products/') Products
                    
            if user
                span.navbar-text.mr-3= user.name
                .dropdown
                    a#dropdown01.nav-link.dropdown-toggle(href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Settings
                    .dropdown-menu
                        a.dropdown-item(href="/profile/") Profile
                        if user.isAdmin                            
                            a.dropdown-item(href="/users") Users
                        a.dropdown-item(href="/logout/") Logout
                     
                           
        .alert.alert-danger.ml-5.text-center.mt-2(style="width: 550px") WARNING: If you're not admin, you can't use Transactions
        
