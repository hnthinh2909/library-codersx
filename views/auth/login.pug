extends ../layouts/common.pug
            
block content
    h1.ml-5 Login

    if errors
        each error in errors
            .alert.alert-danger.ml-5(style="width:400px")= error

    form.ml-5(method="POST" class="form-group")
        .form-group
            label(for='email') Email address
                input#email.form-control(type='email', aria-describedby='emailHelp' name="email" placeholder="Type your email" style="width: 600px" value=values ? values.email : "")
        .form-group
            label(for='password') Password
                input#password.form-control(type='password' name="password" placeholder="Type your password" style="width: 600px" value=values ? values.password : "")
        a.btn.btn-primary.mr-3(href="/users/create/") Sign Up
        button.btn.btn-primary(type='submit') Sign In
        