extends ../layouts/common.pug

block content
    h1.ml-5 Profile

    .mx-auto.d-flex.justify-content-center.mt-5
        .media
            img.img-fluid.mr-5.rounded-circle(src= avatar, alt='Profile photo' style="width: 200px")
            .media-body.ml-5
                .ml-5.d-flex.flex-column
                    label 
                        b Name : 
                        span= name
                    label 
                        b Email : 
                        span= email
                    label
                        b Phone : 
                        span= phone
    .mx-auto.d-flex.justify-content-center.mt-5
        a(href="/profile/editavatar/").mr-1.btn.btn-info Edit Avatar
        a(href="/profile/editinfomation/").btn.btn-info Edit Info