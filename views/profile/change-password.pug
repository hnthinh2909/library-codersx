extends ../layouts/common

block content
    h1.ml-5 Change Password

    if errors
        each error in errors 
            .alert.alert-danger.ml-5.mr-5(style="width: 500px; text-align: center")= error

    form.ml-5.mr-5(method="POST")
        .form-group
            label.mt-3.mb-0(for="oldPassword") Old Password
            input#oldPassword.form-control(name="oldpassword", type="password", value=values ?values.number : "" style="width: 500px" placeholder="Type current password")
            label.mt-3.mb-0(for="newPassword") New Password
            input(type="hidden", name="id", value=id)
            input#newPassword.form-control(name="newpassword", type="password", value=values ?values.number : "" style="width: 500px" placeholder="Type new password")     
        button.btn.btn-primary Confirm