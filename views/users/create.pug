extends ../layouts/common.pug
            
block content
    h1.ml-5 Create

    if errors
        each error in errors
            .alert.alert-danger= error

  
    form(action="/users/create" method="POST" enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(name="name", type="text", value=values ? values.name : "")
            label(for="phone") Phone
            input#phone.form-control(name="number", type="text", value=values ? values.number : "")
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(name="avatar", type="file")
        button.btn.btn-primary Create