extends ../layouts/common.pug
            
block content
    h1.ml-5 Users

    a.btn.btn-primary.ml-5(href="/users/create") Create

    form.ml-5.mt-2(action="/users/search", method="GET", class="form-inline")
        .form-group
            input.form-control(type="text", placeholder="Type to search user", name="q", style="width: 600px")
            button(class="btn btn-primary ml-2") Search
            
    table.table
        tr
            th Avatar
            th Title
            th Phone
            th Action
        tbody
            each user in users
                tr
                    td
                        img.rounded-circle(src=user.avatar style="width:50px ")
                    td= user.name
                    td= user.number
                    td
                        a(href="/users/edit/" + user.id) Edit
                        span &nbsp;
                        span &nbsp;
                        a(href="/users/delete/" + user.id) Delete