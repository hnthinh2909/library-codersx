extends ../layouts/common.pug
            
block content
    h1.ml-5 Users

    a.btn.btn-primary.ml-5(href="/users/create") Create

    form.ml-5.mt-2(action="/users/search", method="GET", class="form-inline")
        .form-group
            input.form-control(type="text", placeholder="Type to search user", name="q", style="width: 600px")
            button(class="btn btn-primary ml-2") Search
            
    table.table.ml-5(style="width: 1500px")
        thead.thead-dark
            tr
                th(scope='col') Title
                th(scope='col') Phone
                th(scope='col') Action
        tbody
            each user in users
                tr
                    td= user.name
                    td= user.number
                    td
                        a(href="/users/edit/" + user.id) Edit
                        span &nbsp;
                        span &nbsp;
                        a(href="/users/delete/" + user.id) Delete