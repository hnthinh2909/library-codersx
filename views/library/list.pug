extends ../layouts/common.pug

block header
	div(cclass="ollapse navbar-collapse d-flex")
		ul(class="navbar-nav d-flex flex-row bd-highlight mb-3")
			li(class="nav-item active")
				a(href="/" class="nav-link mr-4 ml-4") Home
			li(class="nav-item")
				a(href="/library/" class="nav-link mr-4") Library
			li(class="nav-item")
				a(href="/users/" class="nav-link mr-4") Users
			li(class="nav-item")
				a(href="/transactions/" class="nav-link mr-4") Transaction	
				
block content
	h1 This is all of books in my library

	a(href="/library/create") Create a new book

	form(action="/library/search" method="GET" class="form-group")
		input(type="text" name="q" placeholder="Type to search your book" style="width: 350px")
		button(class="btn btn-primary ml-2") Search

	ul
		each book in books
			li= book.name + " - "+ book.des 
			a(href="/library/edit/" + book.id) Edit
			span ---
			a(href="/library/delete/" + book.id) Delete