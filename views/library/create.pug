extends ../layouts/common.pug
			
block content
	h1.ml-5 Create

	p.ml-5 Type a title and description about your book

	if errors
		each error in errors
			.alert.alert-danger.ml-5(style="width:400px")= error

	form.ml-5(action="/library/create" method="POST" class="form-group")
		b Name:
		input(name="name" placeholder="Type name of book" class="form-control" style="width: 600px" value=values ? values.name : "")
		b Description:
		input(name="des" placeholder="Type description of book" class="form-control" style="width: 600px" value=values ? values.des : "")
		button.mt-2(class="btn btn-primary") Create 
